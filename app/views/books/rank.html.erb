<div class="container box">
    <% @all_ranks.each.with_index(1) do |book, i| %>
        <div class="card mb-3">
          <td><i class="fas fa-star"><%= book.favorites.count %></i>
          <%= link_to book_path(book.id) do %>
            <%= attachment_image_tag book,:image, size:"255x210", fallback: "no_image.jpg" %>
            <% end %>
          <div class="card-body">
            <h5 class="card-title">
              <%= book.title %></td>
            </h5>
          </div>
        </div>
        <% end %>
      </div>
  </div>
</div>