<h1 class="rank">小説ランキングTOP3！</h1>
<div class="container box">
    <% @novel_ranks.each.with_index(1) do |book, i| %>
      <% if i < 4 %>
        <div class="card mb-3">
            <i class="fas fa-star"><%= book.favorites.count %></i>
            <%= link_to book_path(book.id) do %>
             <%= attachment_image_tag book,:image, size:"255x210", fallback: "no_image.jpg" %>
            <% end %>
          <div class="card-body">
            <h5 class="card-title">
              <%= book.title %>
            </h5>
          </div>
        </div>
      <% end %>

    <% end %>

</div>
