<div class="customer_show">
    <div class="customer_image"><%= attachment_image_tag @customer, :profile_image, :fill, 200, 200, format: 'jpeg', fallback: "no_image.jpg" %></div>
    <% if @customer.id == current_customer.id %>
      <h3 class="name"><%= @customer.name %></h3>
    <% end %>
  </div>
  <p><%= link_to "プロフィール編集", edit_customer_path(@customer) %></p>
  <% if @customer.id == current_customer.id %>
  <% else %>
    <% if current_customer.following?(@customer) %>
      <%= link_to "Unfollow", customer_relationships_path(@customer.id), method: :delete %>
    <% else %>
      <%= link_to "Follow", customer_relationships_path(@customer.id), method: :post %>
    <% end %>
  <% end %>
  <%= link_to customer_followings_path(@customer.id) do %>
フォロー数: <%= @customer.followings.count %>
<% end %>
<%= link_to customer_followers_path(@customer.id) do %>
フォロワー数: <%= @customer.followers.count %>
<% end %>
<p class="c-txtsp"><%= link_to "ブックマーク一覧", customers_mypage_path(@customer.id) %></p>
<%= link_to "いいね一覧", customers_like_path(@customer.id) %>