<h1>ユーザー一覧</h1>

<th>ユーザー名検索</th>
<div class="search-form">
  <%= form_with url: customers_search_path, method: :get, local: true do |f| %>
    <%= f.text_field :keyword, value: @keyword %>
    <%= f.submit "検索" %>
  <% end %>
</div>


<div class="container customer-box">
    <% @customers.each do |customer| %>
        <div class="card mb-3">
          <%= link_to customer_path(customer.id) do %>
            <%= attachment_image_tag customer,:profile_image, size:"255x210", fallback: "no_image.jpg" %>
            <% end %>
          <div class="card-body">
            <h5 class="card-title">
              <%= customer.name %>
            </h5>
          </div>
        </div>
        <% end %>
      </div>
  </div>
</div>
<%= paginate @customers %>