<h2>プロフィール編集</h2>
<%= form_with model:@customer, local:true do |f| %>
  <label for="inputName">Name</label>
  <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前"%></br>
  <div class= "mt-3" style="text-align: center;"><%= attachment_image_tag @customer, :profile_image, :fill, 200, 200, fallback: "no_image.jpg"%>
  <label for="inputImage">プロフィール画像</label>
  <%= f.attachment_field :profile_image, placeholder: "プロフィール画像" %>
  <%= f.submit "変更を保存" %>
<% end %></div>